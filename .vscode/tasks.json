{
  // https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Test Coverage",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "flask", "test", "--coverage"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "options": {
        "env": {
          "FLASK_ENV": "testing"
        }
      }
    },
    {
      "label": "Build Docker Image",
      "type": "docker-build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "dockerBuild": {
        "tag": "tomy0000000/tubee"
      }
    },
    {
      "label": "Launch Dev Components",
      "type": "docker-compose",
      "presentation": {
        "reveal": "silent"
      },
      "dockerCompose": {
        "up": {
          "detached": true
        },
        "files": ["${workspaceFolder}/docker-compose.dev.yml"]
      }
    },
    {
      "label": "Shut Down Dev Components",
      "type": "docker-compose",
      "presentation": {
        "reveal": "silent"
      },
      "dockerCompose": {
        "down": {},
        "files": ["${workspaceFolder}/docker-compose.dev.yml"]
      }
    }
  ]
}
